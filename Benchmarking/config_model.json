{
  "general": {
    "BF16_SUPPORTED": true,
    "MODEL_NAME": "openai-community/gpt2",
    "attn_implementation": "xformers",  
    "dataset_limit": 2000
  },
  "dataset": {
    "dataset_name": "cnn_dailymail",
    "dataset_config": "3.0.0",
    "dataset_split": "train",
    "MAX_INPUT_LEN": 512,
    "MAX_TARGET_LEN": 128,
    "article_field": "article",
    "summary_field": "highlights",
    "padding_type": "max_length",
    "train_test_split_ratio": 0.1
  },
  "training": {
    "num_train_epochs": 3,
    "per_device_train_batch_size": 4,
    "gradient_accumulation_steps": 2,
    "learning_rate": 5e-5,
    "weight_decay": 0.01,
    "logging_steps": 3,
    "save_steps": 500,
    "fp16": false,
    "bf16": true,
    "eval_strategy": "steps",
    "report_to": "none",
    "metrics_output": "monitor_results"
  },
  "paths": {
    "CACHE_DIR": "hf_cache",
    "output_dir": "gpt2_summarization_flash_bf16"
  },
  "hardware": {
    "device": "cuda",
    "gpu_name": "NVIDIA A100"
  },
  "xformers": {
    "enable_memory_efficient_attention": true
  }
}
